{
  "compilerOptions": {
    "target": "es5" /* Keeping your setting, but consider "ES2020" for modern Node.js */,
    "module": "commonjs" /* Good for Node.js */,
    "outDir": "./build" /* Redirect .js output to build/ */,
    "rootDir": "." /* Root of .ts files */,
    "strict": true /* Great choice */,
    "esModuleInterop": true /* Necessary for chalk, dotenv imports */,
    "skipLibCheck": true /* Speeds up compilation */,
    "forceConsistentCasingInFileNames": true /* Good practice */,
    "noEmitOnError": true /* Prevents bad .js files */
  },
  "include": ["**/*.ts"] /* Compile all .ts files */,
  "exclude": ["node_modules", "build"] /* Ignore these */
}
